<container xmlns="http://symfony.com/schema/dic/services">
    <services>
        <service id="paysera_entity_translation.listener.translatable_entity"
                 class="Paysera\Bundle\EntityTranslationBundle\Listener\TranslatableEntityListener">
            <argument type="service" id="paysera_entity_translation.service.translation_loader" />
            <argument type="service" id="paysera_entity_translation.service.translation_provider" />
            <argument type="service" id="paysera_entity_translation.service.entity_translator" />
            <tag name="doctrine.event_listener" event="postLoad" method="postLoad" />
            <tag name="doctrine.event_listener" event="prePersist" method="prePersist" />
        </service>
    </services>
</container>
